import java.util.*;
public class SumOrProduct {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int c = s.nextInt();
		int sum = 0;
		int pr = 1;
		int i;
		for(i=1; i<=n; i++) {
			sum+=i;
		}
		
		for(i=1;i<=n;i++) {
			pr*=i;
		}
		
		if(c==1)
			System.out.println(sum);
		else if(c==2)
			System.out.println(pr);
		else
			System.out.println(-1);
	}


}
